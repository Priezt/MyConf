autocmd BufRead,BufNewFile *.cf set filetype=spamassassin
"autocmd FileType spamassassin set syntax=spamassassin

nmap <Leader>m {V}!meta<cr>
nmap <Leader>s {V}!see<cr>}}{
nmap <Leader>p {V}!qr predict<cr>
nmap <Leader>l {V}!split-rule-by-so.rb<cr>
nmap <Leader>i {V}!qr ip<cr>
nmap <Leader>b /BLACKSHEEP<cr>
nmap <Leader>o gg/OBVIOUS<cr>/^[a-z]<cr>
nmap <Leader>g o<esc>V!cat<space>~/t\|same-hit.sh<cr>


